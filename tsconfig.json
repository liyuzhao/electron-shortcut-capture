{
	"compilerOptions": {
		"target": "es5",
		"moduleResolution": "node",
		"baseUrl": ".",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"removeComments": true,
		"alwaysStrict": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"importHelpers": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"lib": ["es7", "dom"],
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types", "typings"]
	},
	"exclude": ["node_modules"],
	"include": ["typings/*", "src/**/*"],
	"references": [{ "path": "./build/main" }, { "path": "./build/renderer" }]
}
